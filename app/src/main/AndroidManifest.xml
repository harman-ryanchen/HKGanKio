<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ryan.hkgankio">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".HKApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.daily.WebViewUrlActivty"/>
        <activity android:name=".view.gallery.GalleryActivity"/>
        <activity android:name=".view.notification.NotificationActivity"/>
        <service android:name=".service.PollingService"/>
    </application>

</manifest>