<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/menu_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="order dish:"
        android:textSize="26sp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >


        <CheckedTextView
            android:id="@+id/boilingfish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="boilingfish"
            android:textSize="22sp"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            />

        <CheckedTextView
            android:id="@+id/steambaozi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="steambaozi"
            android:textSize="22sp"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            />

        <CheckedTextView
            android:id="@+id/shaoya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="shaoya"
            android:textSize="22sp"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            />
        <CheckedTextView
            android:id="@+id/xiaochaorou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="xiaochaorou"
            android:textSize="22sp"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            />
    </LinearLayout>

</LinearLayout>
