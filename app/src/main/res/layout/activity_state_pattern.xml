<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="open the door"
        android:onClick="opendoor"
        android:padding="8dp"
        android:textSize="22sp"
        android:gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="close the door"
        android:onClick="closedoor"
        android:padding="8dp"
        android:textSize="22sp"
        android:gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="process the elevator"
        android:onClick="processelevator"
        android:padding="8dp"
        android:textSize="22sp"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="stop process the elevator"
        android:onClick="processstopelevator"
        android:padding="8dp"
        android:textSize="22sp"
        android:gravity="center"
        />

</LinearLayout>
